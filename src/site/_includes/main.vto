<!doctype html>
<html>
    <head>
        {{ if title }}
        <title>{{ title }} &middot; JoCo Book Club</title>
        {{ else }}
        <title>JoCo Book Club</title>
        {{ /if }}
        <meta name="viewport" content="width=device-width, initial-scale=1">
        <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bulma@1.0.1/css/bulma.min.css">
        <script type="module" src="/bf/login-button.js"></script>
        {{ if bfscript }}
        <script type="module" src="{{ bfscript }}"></script>
        {{ /if }}
    </head>

    <body>
        <nav class="navbar is-link" role="navigation" aria-label="main navigation">
            <div class="navbar-brand">
                <a class="navbar-item" href="/">
                    JoCoBookClub
                </a>
                <a class="navbar-item" href="/previous">Previous Books</a>
                <login-button style="display: contents;"></login-button>
            </div>
        </nav>

        {{ content }}
    </body>
</html>